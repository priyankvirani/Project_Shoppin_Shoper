<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_tiny">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_small"
        card_view:cardCornerRadius="@dimen/margin_tiny">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_background">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/margin_tiny"
                android:paddingRight="@dimen/margin_tiny"
                android:paddingTop="@dimen/margin_small">

                <TextView
                    android:id="@+id/txtOrderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_tiny"
                    android:text="Order Number" />

                <TextView
                    android:id="@+id/txtOrderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/margin_tiny"
                    android:text="20/08/2016" />

                <TextView
                    android:id="@+id/txtStreetName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtOrderNumber"
                    android:layout_margin="@dimen/margin_tiny"
                    android:text="Street Name" />

                <TextView
                    android:id="@+id/txtOrderTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/txtOrderNumber"
                    android:layout_margin="@dimen/margin_tiny"
                    android:text="03:30 PM" />

                <TextView
                    android:id="@+id/txtSuburb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtStreetName"
                    android:layout_margin="@dimen/margin_tiny"
                    android:text="Total Price" />

                <TextView
                    android:id="@+id/txtTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtSuburb"
                    android:layout_margin="@dimen/margin_tiny"
                    android:text="Total Price" />

                <TextView
                    android:id="@+id/txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/txtOrderTime"
                    android:layout_margin="@dimen/margin_tiny"
                    android:text="Order Ongoing"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtStatusTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/txtView"
                    android:layout_margin="@dimen/margin_tiny"
                    android:drawableLeft="@drawable/completed"
                    android:drawablePadding="@dimen/margin_all"
                    android:gravity="center_vertical"
                    android:text="20/08/2016"
                    android:textColor="@color/app_theme_1" />

                <TextView
                    android:id="@+id/txtStatusDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/txtStatusTime"
                    android:layout_margin="@dimen/margin_tiny"
                    android:gravity="top"
                    android:paddingBottom="@dimen/margin_all"
                    android:text="02:50 PM"
                    android:textColor="@color/app_theme_1" />


            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
