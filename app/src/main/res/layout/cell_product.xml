<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lltCell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_weight="2"
            android:scaleType="fitXY"
            android:src="@drawable/placeholder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:padding="@dimen/margin_tiny"

                android:textColor="@color/black"
                android:textSize="@dimen/font_size_edittext"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtProductOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_tiny"
                android:textColor="@color/black"
                android:textSize="@dimen/font_normal_textview" />

            <TextView
                android:id="@+id/txtProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_tiny"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_edittext" />

            <TextView
                android:id="@+id/txtProductSalePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_tiny"
                android:textColor="@color/app_theme_1"
                android:textSize="@dimen/font_size_title" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|center"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtProductQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cart_circle_green"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_tiny"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_title" />

                <ImageView
                    android:id="@+id/imgItemStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_small"
                    android:drawablePadding="5dp"
                    android:padding="@dimen/margin_tiny"
                    android:src="@drawable/round"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_title" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/margin_tiny"
        android:background="@color/gray_50" />
</LinearLayout>
