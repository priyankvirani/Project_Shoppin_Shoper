<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_tiny">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_small"
        card_view:cardCornerRadius="@dimen/margin_tiny">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_background">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/margin_tiny"
                android:paddingRight="@dimen/margin_tiny"
                android:paddingTop="@dimen/margin_small">

                <TextView
                    android:id="@+id/txtOrderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_tiny"
                    android:text="Order Number" />

                <TextView
                    android:id="@+id/txtOrderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/margin_tiny"
                    android:text="20/08/2016" />

                <TextView
                    android:id="@+id/txtStreetName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtOrderNumber"
                    android:layout_margin="@dimen/margin_tiny"
                    android:text="Street Name" />

                <TextView
                    android:id="@+id/txtOrderTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/txtOrderNumber"
                    android:layout_margin="@dimen/margin_tiny"
                    android:text="03:30 PM" />

                <TextView
                    android:id="@+id/txtSuburb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtStreetName"
                    android:layout_margin="@dimen/margin_tiny"
                    android:text="Total Price" />

                <TextView
                    android:id="@+id/txtTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtSuburb"
                    android:paddingBottom="@dimen/margin_all"
                    android:layout_margin="@dimen/margin_tiny"
                    android:text="Total Price" />


                <TextView
                    android:id="@+id/txtOrderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/txtOrderTime"
                    android:layout_margin="@dimen/margin_tiny"
                    android:background="@drawable/button_background_yellow"
                    android:drawablePadding="@dimen/margin_all"
                    android:paddingBottom="@dimen/margin_all"
                    android:drawableRight="@drawable/shipping"
                    android:padding="@dimen/margin_button"
                    android:text="Shiping"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_button" />


            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
